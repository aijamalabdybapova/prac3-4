<Window x:Class="PRACTICA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRACTICA"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFC3A47D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <TextBlock Text="Выберите подход" FontSize="48" FontFamily="Palatino Linotype" Foreground="#FF5F3F2C" Grid.ColumnSpan="2"  Grid.Row="0" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <Button x:Name="DS" Content="DataSet" Grid.Column="0" Grid.Row="2"  Background="#FF655134" Foreground="White" FontSize="28" FontFamily="Book Antiqua" Click="DS_Click"/>
        <Button x:Name="EF" Content="EntityFramework" Grid.Column="1" Grid.Row="2"  FontSize="28" FontFamily="Book Antiqua" Foreground="White" Background="#FF655134" Click="EF_Click"/>
    </Grid>
</Window>
